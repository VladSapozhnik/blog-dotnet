@foreach (var user in Model)
{
    <tr>
        <td>@user.UserName</td>
        <td>
            @* Отправляем ID пользователя в метод Delete *@
            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                <button type="submit" class="btn btn-danger">Удалить</button>
            </form>
        </td>
    </tr>
}